<?xml version="1.0" encoding='UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC

        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"

        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping >

    <class entity-name="com.ssh.entity.Person" table="person">

    <id name ="id"  type="java.lang.Integer">
        <column name="id"/>
        <generator class="increment"/>
    </id>

    <property name="name"  type="java.lang.String"  length="255" />

    <property name="age"  type="java.lang.Integer" length="11" />

    <property name="sex"  type="java.lang.String"  length="255"/>


    </class>
</hibernate-mapping>